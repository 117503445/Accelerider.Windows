<UserControl x:Class="Accelerider.Windows.Modules.NetDisk.Views.Transmission.Downloading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:controls="clr-namespace:Accelerider.Windows.Resources.Controls;assembly=Accelerider.Windows.Resources"
             xmlns:transmission="clr-namespace:Accelerider.Windows.Modules.NetDisk.Views.Transmission"
             mvvm:ViewModelLocator.AutoWireViewModel="True">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="50" />
        <Grid Grid.Row="1" Background="#DDDEF0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Height="42" HorizontalAlignment="Stretch">
                <controls:ToolBarButton IconKind="Pause" Label="Pause All"/>
                <controls:ToolBarButton IconKind="Close" Label="Cancel All"/>
            </StackPanel>
        </Grid>

        <transmission:TaskProgressList Grid.Row="2" ItemsSource="{Binding TransferTasks}"/>
    </Grid>
</UserControl>
